<div class="container mh-100 mt-5">
    <div class="row mh-100">
        <div class="col-md-3">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="users-tab" data-toggle="tab" href="#users" role="tab"
                        aria-controls="users" aria-selected="true"><span class="fas fa-users"></span> Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="chats-tab" data-toggle="tab" href="#chats" role="tab"
                        aria-controls="chats" aria-selected="false"><span class="fas fa-comments"></span> Chats</a>
                </li>
            </ul>
            <div class="tab-content" id="usersTabContent">
                <div class="tab-pane fade show active" id="users" role="tabpanel" aria-labelledby="users-tab">
                    {{#each users}}
                    <div class="userDisplay">
                        <p><span class="fas fa-user"></span> {{this.username}}</p>
                    </div>

                    {{/each}}
                </div>
                <div class="tab-pane fade" id="chats" role="tabpanel" aria-labelledby="chats-tab">
                    <p>Chat rooms coming soon!</p>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div id="chat-messages">
                {{!-- {{#each messages}}
                <div class="card mb-3 message">
                    <div class="card-body">
                        <div class="card-title">
                            <h4>{{dataValues.User.dataValues.username}} </h4>
                        </div>
                        <p>{{dataValues.body}} <span style="font-size:10px">{{dataValues.createdAt}}</span></p>
                    </div>
                </div>
                {{/each}} --}}
            </div>
            <form id="chat-form" class="form-group mt-3">
                <div class="input-group">
                    <input type="text" id="msg" class="form-control" placeholder="Enter message" required
                        autocomplete="off">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit"><span
                                class="far fa-paper-plane"></span></button>
                    </div>
                </div>
            </form>


        </div>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/main.js"></script>